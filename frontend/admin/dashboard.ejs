<%- include('../partials/admin/header') %>
    <!-- Main Body (content)-->
    <main class="main users chart-page" style="margin-top: 40px;" id="skip-target">
      <div class="container">
        <div class="row stat-cards">
          <div class="col-md-6 col-xl-6">
              <div class="stat-cards-item">
                    <div class="stat-cards-icon ">
                      <i data-feather="file" aria-hidden="true"></i>
                    </div>
                    <div class="stat-cards-info">
                      <h3 class="stat-cards-info__num"><%=row1.length%></h3>
                      <h5 class="stat-cards-info__title">Number of Students</a></h5>
                    </div>
              </div>
          </div>
          <div class="col-md-6 col-xl-6">
            <div class="stat-cards-item">
                  <div class="stat-cards-icon ">
                    <i data-feather="file" aria-hidden="true"></i>
                  </div>
                  <div class="stat-cards-info">
                    <h3 class="stat-cards-info__num"><%=row1.length%></h3>
                    <h5 class="stat-cards-info__title">Number of Staffs</a></h5>
                  </div>
            </div>
        </div>
      </div>

        <br>
        <br>

        <div>
          <p id="p1"></p>

          <br>
          <br>

          <!-- Table -->
            <table class="table table-hover">
              <thead>
                <tr>
                  <th class="hidden-xs">#</th>
                  <th><center>Name</center></th>
                  <th><center>Login Account</center></th>
                  <th><center><em class="fa fa-cog"></em></center></th>
                </tr> 
              </thead>
              <tbody>
                <% row1.forEach((row1, i ) => {%>
                  <tr>
                    <td class="hidden-xs"><%=i+1%></td>
                    <td><center><%=row1.FNAME%> <%=row1.LNAME%></center></td>
                    <td><center><%=row1.EMAIL%></center></td>
                    <td align="center" style="color: red;">
                      <a href="/admin/deleteuser/<%=row1.USER_ID%>">
                        <em class="fa fa-trash"></em>
                      </a>
                    </td>
                  </tr>
                <% }) %> 

              </tbody>
            </table>
        
        </div>
      </div>
    </main>

<%- include('../partials/admin/footer') %>