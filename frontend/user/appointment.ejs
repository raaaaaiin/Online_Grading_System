<%- include('../partials/user/header') %>
    <!-- Main Body (content)-->
  <form style="margin-top: -25px;" id="appointment-form" role="form" method="post" action="/user/appointment" class="signup-form">

  <!-- form header -->
  <% if(error && error.length > 0){ %>
    <div class="alert alert-danger" role="alert">
        <%= error %>
    </div>
<% } %>
<% if(success && success.length > 0){ %>
    <div class="alert alert-success" role="alert">
        <%= success %>
    </div>
<% } %>
<% if(info && info.length > 0){ %>
    <div class="alert alert-info" role="alert">
        <%= info %>
    </div>
<% } %>
  <div class="form-header">
    <h1>Covid-19 Evaluation Form</h1>
  </div>

  <!-- form body -->
  <div class="form-body">

    <!-- Firstname and Lastname -->
    <div class="horizontal-group">
      <div class="form-group left">
        <p>Have you been diagnosed with Covid-19? </p>
        <br>
          <input type="radio" name="diagnose" id="html" value="Yes">
          <label for="html">Yes</label><br>
          <input type="radio" name="diagnose" id="css" value="No">
          <label for="css">No</label><br>
        
      </div>
    </div>
        <!-- Email -->
        <div class="horizontal-group">
          <div  class="form-group right" >
            <p>Please check all the symptoms that apply? </p>
            <br>
            <input type="radio" name="symptoms" id="html" value="Loss of Taste/Smell">
              <label for="html">Loss of Taste/Smell</label><br>
              <input type="radio" name="symptoms" id="css" value="Difficulty Breathing">
              <label for="css">Difficulty Breathing</label><br>
            <input type="radio" name="symptoms" id="css" value="Runny Nose">
              <label for="css">Runny Nose</label><br>
            <input type="radio" name="symptoms" id="css" value="None">
              <label for="css">None</label><br>
          </div>
      </div>
      <br>
      <br>

          <!-- Firstname and Lastname -->
    <div class="horizontal-group">
        <div class="form-group left" style="margin-top: 80px;">
          <p>Do you have neighborhood who tested positive in Covid-19? </p>
          <br>
            <input type="radio" name="tested" id="html" value="Yes">
            <label for="html">Yes</label><br>
            <input type="radio" name="tested" id="css" value="No">
            <label for="css">None</label><br>
          
        </div>
      </div>
          <!-- Email -->
          <div class="horizontal-group">
            <div class="form-group right" style="margin-top: 15px;">
              <p>Do you have neighborhood who tested positive in Covid-19? </p>
              <br>
                <input type="radio" name="neighbor" id="html" value="Yes">
                <label for="html">Yes</label><br>
                <input type="radio" name="neighbor" id="css" value="No">
                <label for="css">None</label><br>
              
            </div>
          </div>

    <!-- Email -->
    <div class="horizontal-group">
        <div class="form-group right" style="margin-top: 40px;">
            <p>Select your Gender :</p>
            <br>
              <input type="radio" name="gender" id="html" value="Yes">
              <label for="html">Male</label><br>
              <input type="radio" name="gender" id="css" value="No">
              <label for="css">Female</label><br>
            <input type="radio" name="gender" id="css" value="No">
              <label for="css">Others</label><br>
          </div>
     

          <div class="form-group left" style="margin-top: 35px;">
            <label for="email" class="label-title">Date Of Appointment</label>
            <input type="date" id="email" name="date" style="padding-left: -60px;" class="form-input" required/>
          </div>
    </div>

    <!-- Email -->
    <div class="horizontal-group">
      <div class="form-group left" style="margin-top: 40px;">
        <label for="medTime" style="margin-left: 0px;"><b>Appointment To:</b></label>
        <select  style="padding: 10px 30px; margin-top: 30px; margin-left: 35px;" name="role"required>
            <option value=""></option>
            <option value="Professor">Professor</option>
            <option value="Library Staff">Library Staff</option>
        </select>
        </div>
    </div>

      <div class="form-footer">
        <button type="button" style="background-color:#8e0050; border-color: transparent;" class="btn btn-primary btns" data-toggle="modal" onclick="submitForm();" data-target="#staticBackdrop">
          Submit
        </button>
    </div>

  </div>


  <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
      <div class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header">
          </div>
          <div class="modal-body">
              <h3>Make your sure that all the data is all true</h3>
          </div>
          <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary" id="cf-submit">Submit</button>
          </div>
      </div>
      </div>
  </div>

</form>

<%- include('../partials/admin/footer') %>

  